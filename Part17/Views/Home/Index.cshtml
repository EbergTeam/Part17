@model IEnumerable<Part17.Models.User>
@{
    ViewBag.Title = "Все пользователи";
}
<a asp-action="Create">Добавить пользователя</a><br>
<a asp-action="AddCompany">Добавить компанию</a>
<table class="table">
    <tr><td><a asp-action="Index" asp-route-sortType="@ViewData["sortType"]">Список пользователей</a></td></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>
                <a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id">Подробнее</a>
                <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id">Редактировать</a>
                <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
    }
</table>